<%= link_to storyroom_path(@storyroom), class:"topbar_back_button" do %>
  <i class="fa-solid fa-angle-left"></i>
<% end %>

<div class="paragraphe_container">
  <h2>Le morceau de votre récit : </h2>
  <p><%= @message.content %></p>

  <h2>Modifier</h2>
  <div class="message_typing_edit">
    <%= form_for [@storyroom, @message], url: storyroom_message_path(@storyroom, @message), method: :patch do |f| %>
      <%= f.text_area :content, id:"messageFieldEdit", class: "textfield_custom" %>
      <%= f.submit "Mettre à jour" %>
    <% end %>
  </div>
</div>
