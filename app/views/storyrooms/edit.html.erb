<%= link_to storyroom_path(@storyroom), class:"topbar_back_button" do %>
  <i class="fa-solid fa-angle-left"></i>
<% end %>

<div class="universe_card" style="background-image: linear-gradient(0deg, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 75%), url(<%= @universe.photo %>);">
  <h2><%= @universe.title %></h2>
  <p><%= @universe.description.split('.').first %>.</p>
</div>

<div class="paragraphe_container">
  <p>Modifiez comme vous le désirez</p>
</div>

<div class="storyroom_newtail">
  <%= form_with model: @storyroom do |form| %>

    <div>
      <%= form.label :title, "Titre du récit" %>
      <%= form.text_field :title, value: @storyroom.title, class: "textfield_custom" %>
    </div>

    <div>
      <%= form.label :storyroom_synopsis, "Scénario" %>
      <%= form.text_area :storyroom_synopsis, value: @storyroom_synopsis, rows: 10, class: "textarea_custom" %>
    </div>

    <%= button_tag(type: 'submit') do %>
      <i class="fa-regular fa-floppy-disk"></i>
    <% end %>

  <% end %>
</div>
